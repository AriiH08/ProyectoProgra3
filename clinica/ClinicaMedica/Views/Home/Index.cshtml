@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}

<div class="hero">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Bienvenido a Clínica Médica Vitalis</h1>
        <p class="lead"><em>Atención médica de alta calidad con el mejor equipo de especialistas dedicados a tu salud.</em></p>
        <a href="@Url.Action("Create","Citas")" class="btn btn-primary cta-btn fw-bold">
            <i class="bi bi-plus-circle"></i> Agenda una Cita
        </a>
        <a href="#contact" class="btn btn-light cta-btn2">Contáctanos</a>
        <a href="#services" class="btn btn-light cta-btn2">Conoce Nuestros Servicios</a>
    </div>
</div>

<section id="services" class="services text-center">
    <div class="container">
        <h2 class="mb-4"><em>Nuestros Servicios</em></h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/images/consulta.jpeg" alt="Consulta General" class="service-img">
                    <div class="card-body">
                        <h5 class="card-title">Consulta General</h5>
                        <p class="card-text">Exámenes médicos integrales para mantener tu salud en óptimas condiciones.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/images/espec.jpg" alt="Especialidades" class="service-img">
                    <div class="card-body">
                        <h5 class="card-title">Endoscopía</h5>
                        <p class="card-text">Una endoscopía es un procedimiento que permite que el médico vea el interior de su cuerpo.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100">
                    <img src="~/images/procedimientos.jpg" alt="Procedimientos" class="service-img">
                    <div class="card-body">
                        <h5 class="card-title">Cardiología</h5>
                        <p class="card-text">Especialidad de la medicina que estudia el funcionamiento del aparato cardiovascular realizado por expertos reconocidos en el área.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="team" class="text-center">
    <div class="container">
        <h2 class="mb-4"><em>Nuestro Equipo Médico</em></h2>
        <div class="row g-4">
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/images/cardiologia.jpg" alt="Dr. Ana Pérez" class="team-img mx-auto mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Dr. Ana Pérez</h5>
                        <p class="card-text">Especialista en Cardiología con 7 años de experiencia.</p>
                        <ul class="text-start">
                            <li>Especialista en Medicina Interna</li>
                            <li>Especialista en Cardiología</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/images/Endocri.jpg" alt="Dr. Juan López" class="team-img mx-auto mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Dr. Juan López</h5>
                        <p class="card-text">Actualmente miembro del Colegio de Médicos y Cirujanos.</p>
                        <ul class="text-start">
                            <li>Licenciatura en Medicina y Cirugía</li>
                            <li>Especialista en Endocrinología</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/images/maria.jpg" alt="Dra. María González" class="team-img mx-auto mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Dra. María González</h5>
                        <p class="card-text">Cuenta con 8 años de experiencia en el área.</p>
                        <ul class="text-start">
                            <li>Licenciatura en Medicina y Cirugía</li>
                            <li>Especialista en Medicina Interna</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100">
                    <img src="~/images/luis.jpg" alt="Dr. Luis Castillo" class="team-img mx-auto mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Dr. Luis Castillo</h5>
                        <p class="card-text">Con 21 años de experiencia.</p>
                        <ul class="text-start">
                            <li>Doctorado en Ciencias Médicas</li>
                            <li>Médico cirujano</li>
                            <li>Especialista en Urología</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contact" class="contact text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-6 contact-form">
                <h2 class="mb-4">Contáctanos</h2>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Nombre Completo</label>
                        <input type="text" class="form-control" id="name" placeholder="Introduce tu nombre">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" placeholder="Introduce tu correo electrónico">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" id="phone" placeholder="Introduce tu teléfono">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Motivo de Consulta</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Introduce tu mensaje"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Enviar
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
}
