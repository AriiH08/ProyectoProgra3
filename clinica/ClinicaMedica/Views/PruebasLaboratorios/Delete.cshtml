<div>
    <h4>Prueba de Laboratorio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoPrueba)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoPrueba)
