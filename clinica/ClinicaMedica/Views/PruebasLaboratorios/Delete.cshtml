        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPrueba)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPrueba)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resultado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resultado)
        </dd>
        <dt class = "col-sm-2">
