@model ClinicaMedica.Data.Models.PruebasLaboratorio

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Pruebas de Laboratorio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PruebaId" />
            <div class="form-group">
                <label asp-for="PacienteId" class="control-label"></label>
                <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.PacienteId"></select>
                <span asp-validation-for="PacienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaboratorioId" class="control-label"></label>
                <select asp-for="LaboratorioId" class="form-control" asp-items="ViewBag.LaboratorioId"></select>
                <span asp-validation-for="LaboratorioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPrueba" class="control-label"></label>
                <input asp-for="TipoPrueba" class="form-control" />
                <span asp-validation-for="TipoPrueba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaPrueba" class="control-label"></label>
                <input asp-for="FechaPrueba" class="form-control" />
                <span asp-validation-for="FechaPrueba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resultado" class="control-label"></label>
                <input asp-for="Resultado" class="form-control" />
                <span asp-validation-for="Resultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
